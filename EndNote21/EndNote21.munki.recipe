<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Description</key>
    <string>Downloads latest Endnote 21 installer and imports it into munki.

Set the DERIVE_MIN_OS variable to a non-empty string to set the minimum_os_version via MunkiInstallsItemsCreator. This requires a minimum AutoPkg version of 2.7 please update if you're not already running it.</string>
    <key>Identifier</key>
    <string>com.github.dataJAR-recipes.munki.EndNote21</string>
    <key>Input</key>
    <dict>
        <key>DEFAULT_CATALOG</key>
        <string>testing</string>
        <key>DERIVE_MIN_OS</key>
        <string>YES</string>
        <key>NAME</key>
        <string>EndNote 21</string>
        <key>MUNKI_REPO_SUBDIR</key>
        <string>apps/%NAME%</string>
        <key>pkginfo</key>
        <dict>
            <key>blocking_applications</key>
            <array>
                <string>Microsoft Word</string>
                <string>EndNote 21</string>
            </array>
            <key>catalogs</key>
            <array>
                <string>%DEFAULT_CATALOG%</string>
            </array>
            <key>category</key>
            <string>Reference</string>
            <key>description</key>
            <string>Bibliographic management app.</string>
            <key>developer</key>
            <string>Thomson Reuters</string>
            <key>display_name</key>
            <string>EndNote 21</string>
            <key>name</key>
            <string>%NAME%</string>
            <key>postinstall_script</key>
            <string>#!/bin/zsh --no-rcs
DIR="EndNote CWYW Word 16.bundle"
PATH_SRC="/Applications/EndNote 21/Cite While You Write/$DIR"
PATH_DEST="/Library/Application Support/Microsoft/Office365/User Content.localized/Startup.localized/Word/"

[[ -d "$PATH_DEST" ]] || mkdir -p "$PATH_DEST"
if [ -d "$PATH_SRC" ]
then
    echo "Copying $DIR to $PATH_DEST"
    cp -r "$PATH_SRC" "$PATH_DEST"
else
    echo "Error: Directory $PATH_SRC does not exists."
fi
            </string>
            <key>postuninstall_script</key>
            <string>#!/bin/zsh --no-rcs
DIR="EndNote CWYW Word 16.bundle"
PATH_DEST="/Library/Application Support/Microsoft/Office365/User Content.localized/Startup.localized/Word/$DIR"

if [ -d "$PATH_DEST" ]
then
    echo "Removing $PATH_DEST"
    rm -r "$PATH_DEST"
fi
            </string>
            <key>preinstall_script</key>
            <string>#!/bin/zsh --no-rcs
endnote_bundle_2008="/Applications/Microsoft Office 2008/Office/Startup/Word/EndNote CWYW Word 2008.bundle"
endnote_bundle_2011="/Applications/Microsoft Office 2011/Office/Startup/Word/EndNote CWYW Word 2011.bundle"
endnote_bundle_2016="/Library/Application Support/Microsoft/Office365/User Content.localized/Startup.localized/Word/EndNote CWYW Word 2016.bundle"

bundles=("$endnote_bundle_2008" "$endnote_bundle_2011" "$endnote_bundle_2016")

for i in $bundles; do
  if [ -d "$i" ]
  then
    echo "Removing old CWYW bundle $i"
    rm -r "$i"
  else
    echo "$i is not installed"
    echo "Proceeding with installation"
  fi
done</string>
            <key>unattended_install</key>
            <true/>
        </dict>
    </dict>
    <key>MinimumVersion</key>
    <string>2.7</string>
    <key>ParentRecipe</key>
    <string>com.github.rtrouton.pkg.EndNote21</string>
    <key>Process</key>
    <array>
        <dict>
            <key>Arguments</key>
            <dict>
                <key>destination_path</key>
                <string>%RECIPE_CACHE_DIR%/EndNote.zip</string>
                <key>purge_destination</key>
                <true/>
                <key>source_path</key>
                <string>%pathname%/Install EndNote 21.app/Contents/Resources/EndNote.zip</string>
            </dict>
            <key>Processor</key>
            <string>Copier</string>
        </dict>
        <dict>
            <key>Arguments</key>
            <dict>
                <key>archive_path</key>
                <string>%RECIPE_CACHE_DIR%/EndNote.zip</string>
                <key>destination_path</key>
                <string>%RECIPE_CACHE_DIR%/Applications</string>
                <key>purge_destination</key>
                <true/>
            </dict>
            <key>Processor</key>
            <string>Unarchiver</string>
        </dict>
        <dict>
            <key>Arguments</key>
            <dict>
                <key>source</key>
                <string>%RECIPE_CACHE_DIR%/Applications/EndNote</string>
                <key>target</key>
                <string>%RECIPE_CACHE_DIR%/Applications/EndNote 21</string>
            </dict>
            <key>Processor</key>
            <string>FileMover</string>
        </dict>
        <dict>
            <key>Arguments</key>
            <dict>
                <key>derive_minimum_os_version</key>
                <string>%DERIVE_MIN_OS%</string>
                <key>faux_root</key>
                <string>%RECIPE_CACHE_DIR%</string>
                <key>installs_item_paths</key>
                <array>
                    <string>/Applications/EndNote 21/EndNote 21.app</string>
                </array>
                <key>version_comparison_key</key>
                <string>CFBundleShortVersionString</string>
            </dict>
            <key>Processor</key>
            <string>MunkiInstallsItemsCreator</string>
        </dict>
        <dict>
            <key>Processor</key>
            <string>MunkiPkginfoMerger</string>
        </dict>
        <dict>
            <key>Arguments</key>
            <dict>
                <key>repo_subdirectory</key>
                <string>%MUNKI_REPO_SUBDIR%</string>
            </dict>
            <key>Processor</key>
            <string>MunkiImporter</string>
        </dict>
        <dict>
            <key>Arguments</key>
            <dict>
                <key>path_list</key>
                <array>
                    <string>%RECIPE_CACHE_DIR%/Applications</string>
                    <string>%RECIPE_CACHE_DIR%/EndNote.zip</string>
                </array>
            </dict>
            <key>Processor</key>
            <string>PathDeleter</string>
        </dict>
    </array>
</dict>
</plist>
